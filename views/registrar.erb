 <!-----------------------------parte central-->
<div id="home-sec">
   <div class="overlay">
	  <div class="container">
		 <div class="col-md-8 pad-top scrollclass">
			<h1><strong><mark>Registrate al chat de SYTW</strong></h1>
			   <p class="home-p">
				  Introducete en nuestro chat de amigos tan fácil como introducir en el formulario.
				  <br><mark>-tu username.</mark>
				   <br><mark>-tu contraseña.</mark>
				   <br><mark>-tu contraseña repetida.</mark><br>
			   </p>
		 </div>
	  </div>
	  
   </div>
</div>
 <!-----------------------------formulario registrar-->
<section id="skill-sec">
   <div class="overlay">
	  <div class="container">
	  	<div class="row text-center">
           <h3><strong><mark>Registrate</strong></h3>
           	 <div id="warning-message" style="color:red">
 <!-----------------------------condiciones-->
			   <% if @repeat == true %>
				  <p class="bg-danger">EL username está en el chat, elije otro!</p>
			   <% end %>
			   <% if @blanco == true %>
				  <p class="bg-danger">Debes introducir un nombre de usuario o contraseña</p>
			   <% end %>
			      <% if @contrax == true %>
				  <p class="bg-danger">Las contraseñas no son iguales!</p>
			   <% end %>
			</div>
 <!-----------------------------fprmularo-->
			<form action="/chat" method="POST" name="input" role="form">
			   <div class="form-group">
				  <label for="name"></label>
				  <input id="name" name="name" type="text" class="form-control" placeholder="Username"></input>
				  <input id="pass1" name="pass1" type="text" class="form-control" placeholder="Contraseña"></input>
				  <input id="pass2" name="pass2" type="text" class="form-control" placeholder="Repetir Contraseña"></input>
			   </div>
			   <input class="btn btn-info" id="enter" type="submit" value="Click para registrarte."></input>
			</form>
	    </div>
	  </div>
   </div>
</section>
